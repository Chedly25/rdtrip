# RdTrip Environment Variables
# Copy this file to .env and fill in your actual values

# Port (Heroku sets this automatically)
PORT=3000

# API Keys
PERPLEXITY_API_KEY=pplx-xxxxx
GOOGLE_PLACES_API_KEY=AIzaSyXXXXX
MAPBOX_ACCESS_TOKEN=pk.xxxxx

# Agent System Configuration
# V1 = Simple Perplexity-only pipeline (fast, no validation, ~2-3min)
# V2 = Agentic coordination with Google Places validation (slow but high quality, ~5-7min)
USE_AGENTIC_SYSTEM=true  # Set to 'false' for V1, 'true' for V2

# Orchestrator Version (when USE_AGENTIC_SYSTEM=true)
# V2 = Sequential agent execution (5-7 minutes)
# V3 = Google-first parallel execution (30-60 seconds, 80% cost reduction)
USE_ORCHESTRATOR_V3=true  # Set to 'true' for V3 Google-first architecture

# Optimization Features (Phase 3 - not yet implemented)
USE_OPTIMIZATION=false  # Geographic optimization and conflict resolution

# Database
DATABASE_URL=postgresql://user:pass@host:5432/dbname

# Session
SESSION_SECRET=your-secret-key-here