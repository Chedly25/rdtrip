# =============================================================================
# Waycraft Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your values
# Epic 12: Integration & Infrastructure
# =============================================================================

# -----------------------------------------------------------------------------
# Supabase Configuration (WI-12.1, WI-12.3)
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
# -----------------------------------------------------------------------------
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key

# Service role key - KEEP SECRET, only use server-side
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# -----------------------------------------------------------------------------
# API Configuration (Backend URL)
# -----------------------------------------------------------------------------
VITE_API_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# AI Services
# Get from: https://console.anthropic.com/
# -----------------------------------------------------------------------------
VITE_ANTHROPIC_API_KEY=sk-ant-xxx

# -----------------------------------------------------------------------------
# Maps & Places
# Get from: https://console.cloud.google.com/apis/credentials
# Get from: https://www.mapbox.com/account/access-tokens/
# -----------------------------------------------------------------------------
VITE_GOOGLE_PLACES_API_KEY=AIzaSyXXX
VITE_MAPBOX_TOKEN=pk.xxx

# -----------------------------------------------------------------------------
# Weather
# Get from: https://openweathermap.org/api
# -----------------------------------------------------------------------------
VITE_OPENWEATHER_API_KEY=xxx

# -----------------------------------------------------------------------------
# Images
# Get from: https://www.pexels.com/api/
# -----------------------------------------------------------------------------
VITE_PEXELS_API_KEY=xxx

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
VITE_ENABLE_AUTH=true
VITE_ENABLE_OFFLINE=false
